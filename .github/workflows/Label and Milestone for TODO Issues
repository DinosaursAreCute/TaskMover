name: Label and Milestone for TODO Issues

on:
  issues:
    types: [opened]

jobs:
  label-and-milestone:
    if: startsWith(github.event.issue.title, '[TODO]')
    runs-on: ubuntu-latest
    steps:
      - name: Add label
        uses: actions-ecosystem/action-add-labels@v1
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          labels: feature

      - name: Add milestone
        uses: actions-ecosystem/action-add-milestone@v1
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          milestone: Taskmover MS.2
